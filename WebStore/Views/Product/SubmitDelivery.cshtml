@model WebStore.DTO.DeliveryDTO

@{
    ViewData["Title"] = "SubmitDelivery";
}

<h1>SubmitDelivery</h1>

<h4>DeliveryDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitDelivery" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pochta" class="control-label"></label>
                <input asp-for="Pochta" class="form-control" />
                <span asp-validation-for="Pochta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Purchase" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BasketItems">Back to Basket</a>
</div>

